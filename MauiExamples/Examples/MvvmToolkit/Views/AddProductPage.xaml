<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiExamples.Examples.MvvmToolkit.ViewModels"
             x:Class="MauiExamples.Examples.MvvmToolkit.Views.AddProductPage"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Frame BorderColor="LightGray" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Name:" FontAttributes="Bold" />
                    <Entry Text="{Binding Name}" Placeholder="Enter product name" />

                    <Label Text="Description:" FontAttributes="Bold" />
                    <Editor Text="{Binding Description}" 
                            Placeholder="Enter product description"
                            HeightRequest="100" />

                    <Label Text="Price:" FontAttributes="Bold" />
                    <Entry Text="{Binding Price}" 
                           Keyboard="Numeric"
                           Placeholder="Enter price" />

                    <Label Text="Image URL:" FontAttributes="Bold" />
                    <Entry Text="{Binding ImageUrl}" 
                           Placeholder="Enter image URL" />

                    <HorizontalStackLayout Spacing="10">
                        <Label Text="In Stock:" 
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                        <Switch IsToggled="{Binding InStock}" 
                                VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Button Text="Save" 
                        Command="{Binding SaveProductCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        WidthRequest="120" />
                
                <Button Text="Cancel" 
                        Command="{Binding CancelCommand}"
                        BackgroundColor="Gray"
                        TextColor="White"
                        WidthRequest="120" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 